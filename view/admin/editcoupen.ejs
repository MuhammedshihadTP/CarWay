<div class="container " >
    <div class="row g-4">
        <div class="  col-xl-2">

        </div>
      
        <div class="col-sm-12  col-xl-6">
          
        <div class="card">
                <div class="card-body" >
                    <h4 class="card-title">Add Coupon</h4>
                    <p class="card-description">add discount coupens for products</p>
                    <form class="forms-sample" action="/admin/addcoupen/<%= result.id %>" method="post">
                        <div class="form-group">
                            <label for="">CODE</label>
                            <input
                                type="text"
                                class="form-control"
                                id="exampleInputName1"
                               value="<%= result.code %>"
                                name="code"
                            />
                        </div>
    
                        <div class="form-group">
                            <label>Available</label>

                            <div class="input-group col-xs-12">
                                <input
                                    class="form-control file-upload-info"
                                  value="<%=result.Available %>"
                                    type="number"
                                    id="availability"
                                    name="Available"                                    
                                />
                                <!-- <span class="input-group-append"> -->
                                    <!-- <button class="file-upload-browse btn btn-primary" type="button">Upload</button> -->
                                <!-- </span> -->
                            </div>
                        </div>
    
