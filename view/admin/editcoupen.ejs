                            <input
                                class="form-control"
                                id="exampleTextarea1"                               
                              value="<%= result.Status %>"  name="Status"/>
                        </div>
                        <div class="form-group">
                            <label for="amount">amount</label>
                            <input  class="form-control" type="text" id="amount" name="amount">
                        </div>
                        <div>
                            
                        </div><br>
                        <div class="form-group">
                            <label for="maxredeem"> maxDiscountAmount</label>
                            <input class="form-control" type="number" name="maxDiscountAmount" value="<%= result.maxDiscountAmount %>">
                        </div>
                        <div class="form-group">
                            <label for="minimumcartamount">Minimum Cart Amount</label>
                            <input class="form-control" type="text" name="minCartAmount" value="<%= result.minCartAmount %>">
                        </div>
                        <div class="form-group">
                            <label for="exp date">exp date</label>
                            <input class="form-control" type="date" name="expireAfter"   value="<%= result.expireAfter %>">                           
                        </div>
                        <button type="submit" class="btn btn-primary me-2"> ADD COUPEN </button>
                        <button class="btn btn-light">Cancel</button>
                    </form>
                </div>

